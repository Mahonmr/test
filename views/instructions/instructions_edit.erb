<div class="container container-table">
    <div class="row vertical-center-row">
        <div class="text-center col-md-4 col-md-offset-4"><h2><%= "Edit the Instrucion for the #{@instruction.recipe.name} recipe" %></h2></div>
    </div>
</div>

<div class= 'container'>
  <form action="/recipes/<%= @instruction.recipe.id %>/instructions/<%= @instruction.id %>" method="post">
    <input name="_method" type="hidden" value="patch">
    <div class="form-group">
      <label>Step:</label>
      <input type="text" class="form-control" id="step" name="step" value="<%= @instruction.step %>"><br>

      <label>Task:</label>
      <input type="text" class="form-control" id="task" name="task" value="<%= @instruction.task %>">
    </div>
    <button type="submit" class="btn btn-default">Submit</button>
  </form>
</div>
