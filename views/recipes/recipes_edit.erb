<div class= 'container'>
  <form action="/recipes/<%= @recipe.id %>" method="post">
    <input name="_method" type="hidden" value="patch">
    <div class="form-group">
      <label>Edit the recipe:</label>
      <input type="text" class="form-control" id="name" name="name" value="<%= @recipe.name %>"><br>
      <label>Rank this recipe:</label>
      <input type="text" class="form-control" id="ranking" name="ranking" value="<%= @recipe.ranking %>">
    </div>
    <button type="submit" class="btn btn-default">Submit</button>
  </form>
</div>
