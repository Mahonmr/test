<div class="container">
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Tag</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @tags.each do |tag|%>
        <tr>
          <td><%= tag.tag %></td>
          <td>
            <div class="col-xs-1">
              <form class="form-horizontal" role="form" action="/tags/<%= tag.id %>/edit" method="get">
                <button type="submit" class="btn btn-link">Edit</button>
              </form>
            </div>
            <div class="col-xs-1">
              <form class="form-horizontal" role="form" action="/tags/<%= tag.id %>" method="post">
                <input name="_method" type="hidden" value="delete">
                <button type="submit" class="btn btn-link">Delete</button>
              </form>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
