<div class="container container-table">
    <div class="row vertical-center-row">
        <div class="text-center col-md-4 col-md-offset-4"><h2><%= "Add an ingredient for the #{@recipe.name} recipe" %></h2></div>
    </div>
</div>

<div class= 'container'>
  <form action="/recipes/<%= @recipe.id %>/ingredients" method="post">
    <div class="form-group">
      <label>Amount:</label>
      <input type="text" class="form-control" id="amount" name="amount" placeholder="quantity"><br>

      <label>Ingredient:</label>
      <input type="text" class="form-control" id="ingredient" name="ingredient" placeholder="ingredient">
    </div>
    <button type="submit" class="btn btn-default">Submit</button>
  </form>
</div>
