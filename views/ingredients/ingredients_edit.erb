<div class="container container-table">
    <div class="row vertical-center-row">
        <div class="text-center col-md-4 col-md-offset-4"><h2><%= "Edit the ingredient for the #{@ingredient.recipe.name} recipe" %></h2></div>
    </div>
</div>

<div class= 'container'>
  <form action="/recipes/<%= @ingredient.recipe.id %>/ingredients/<%= @ingredient.id %>" method="post">
    <input name="_method" type="hidden" value="patch">
    <div class="form-group">
      <label>Amount:</label>
      <input type="text" class="form-control" id="amount" name="amount" value="<%= @ingredient.amount %>"><br>

      <label>Ingredient:</label>
      <input type="text" class="form-control" id="ingredient" name="ingredient" value="<%= @ingredient.ingredient %>">
    </div>
    <button type="submit" class="btn btn-default">Submit</button>
  </form>
</div>

